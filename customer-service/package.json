{
  "name": "customer-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "build-babel": "babel -d ./dist ./src -s",
    "build": "npm run clean && npm run build-babel",
    "start": "npm run build && NODE_ENV=dev node ./dist/index.js",
    "dev": "npm run build && NODE_ENV=dev nodemon --exec babel-node ./src/index.js",
    "test:unit": "NODE_ENV=dev jest --testEnvironment=node --testMatch=**/unit-tests/*.js",
    "test:integration": "NODE_ENV=dev jest --testEnvironment=node --testMatch=**/integration-tests/*.js",
    "test:all": "NODE_ENV=dev jest --testEnvironment=node "
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.23.9",
    "@babel/node": "^7.23.9",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.23.9",
    "@babel/runtime": "^7.23.9",
    "@types/node": "^20.11.5",
    "jest": "^29.0.3",
    "mongodb-memory-server": "8.16.0"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@types/jest": "^29.5.11",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.22",
    "nodemon": "^3.0.0",
    "supertest": "^6.3.4"
  },
  "events": {
    "crash": "sh -c 'lsof -i :${PORT:-8081} -t | xargs kill'"
  },
  "browser": {
    "crypto": false
  }
}
